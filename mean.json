                },
                "ignore_nodata": {
                    "from_parameter": "ignore_nodata"
                }
            }
        },
        "divide": {
            "process_id": "divide",
            "arguments": {
                "x": {
                    "from_node": "sum"
                },
                "y": {
                    "from_node": "count"
                }
            }
        },
        "neq": {
            "process_id": "neq",
            "arguments": {
                "x": {
                    "from_node": "count"
                },
                "y": 0
            }
        },
        "if": {
