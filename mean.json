            }
        },
        "count": {
            "process_id": "count",
            "arguments": {
                "data": {
                    "from_parameter": "data"
                },
                "condition": {
                    "from_node": "count_condition"
                }
            }
        },
        "sum": {
            "process_id": "sum",
            "arguments": {
                "data": {
